{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "config/**/*",
    "controllers/**/*",
    "middlewares/**/*",
    "models/**/*",
    "routes/**/*",
    "services/**/*",
    "utils/**/*",
    "app.ts",
    "server.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
 